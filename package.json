    "@serenityjs/plugins": "*",
    "@serenityjs/core": "*",
    "@serenityjs/nbt": "*",
    "@serenityjs/protocol": "*",
    "@serenityjs/raknet": "*"
  },
  "devDependencies": {
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  }
}