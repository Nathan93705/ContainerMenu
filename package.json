{
  "name": "container-menu",
  "version": "1.0.0",
  "author": "Nathan93705",
  "description": "A Library Plugin For A Quick Way To Make Container Menu's, such as chest ui's",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "license": "MIT",
  "scripts": {
    "build": "tsup"
  },
